/* 顶部导航 */

.status-bar {
  width: 100%;
  z-index: 99999;
  position: fixed;
  top: 0;
}
.status-bar_b {
  width: 100%;
  z-index: 99999;
  position: absolute;
  top: 0;
}

.goBack {
  position: absolute;
  top: 15rpx;
  font-size: 12pt;
}

.goBack image {
  width: 30rpx;
  height: 30rpx;
  padding: 12rpx 20px 0 30rpx;
}

.tabar {
  display: flex;
  justify-content: center;
  padding-bottom: 4px;
  background:rgb(241, 239, 239);
  color: #fff;
  height: 90rpx
}

.tabar_b {
  display: flex;
  justify-content: center;
  padding-bottom: 4px;
  color: #fff;
  background: none !important;
  /* position:absolute !important; */
}

.tabar2 {
  background: #fff;
  color: #575757;
}

.tabar2 text {
  font-weight: lighter !important;
  color: #000;
}

.tabar text {
  padding: 20rpx 30rpx;
  font-size: 34rpx;
  color: black;
}

.tabar_b text {
  padding: 20rpx 30rpx;
  font-size: 34rpx;
  color: #212121;
}
.tabar_b .active {
  color: #fff;
}
.tabar .active {
  color: #fff;
}
